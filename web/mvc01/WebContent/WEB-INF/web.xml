<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>mvc01</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>index</servlet-name>
  	<servlet-class>com.bit.mvc01.controller.IndexController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>intro</servlet-name>
  	<servlet-class>com.bit.mvc01.controller.IntroController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>list</servlet-name>
  	<servlet-class>com.bit.mvc01.controller.ListController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>add</servlet-name>
  	<servlet-class>com.bit.mvc01.controller.AddController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>detail</servlet-name>
  	<servlet-class>com.bit.mvc01.controller.DetailController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>edit</servlet-name>
  	<servlet-class>com.bit.mvc01.controller.EditController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>delete</servlet-name>
  	<servlet-class>com.bit.mvc01.controller.DeleteController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>login</servlet-name>
  	<servlet-class>com.bit.mvc01.controller.LoginController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>logout</servlet-name>
  	<servlet-class>com.bit.mvc01.controller.LogoutController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>index</servlet-name>
  	<url-pattern>/index.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>intro</servlet-name>
  	<url-pattern>/intro.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>list</servlet-name>
  	<url-pattern>/list.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>add</servlet-name>
  	<url-pattern>/add.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>detail</servlet-name>
  	<url-pattern>/detail.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>edit</servlet-name>
  	<url-pattern>/edit.html</url-pattern>
  </servlet-mapping>  
  <servlet-mapping>
  	<servlet-name>delete</servlet-name>
  	<url-pattern>/delete.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/login.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  <servlet-name>logout</servlet-name>
  	<url-pattern>/logout.html</url-pattern>
  </servlet-mapping>
</web-app>