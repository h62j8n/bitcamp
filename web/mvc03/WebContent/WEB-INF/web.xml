<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>mvc03</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>intro</servlet-name>
    <servlet-class>com.bit.mvc03.controller.IntroController</servlet-class>
    <init-param>
      <param-name>pageName</param-name>
      <param-value>intro</param-value>
    </init-param>
    <init-param>
      <param-name>imgName</param-name>
      <param-value>big02</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>intro</servlet-name>
    <url-pattern>/intro.bit</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>intro</servlet-name>
    <url-pattern>/intro.html</url-pattern>
  </servlet-mapping>
</web-app>